<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/ivor_tabtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableTop="@drawable/ivor_icon0"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="资讯"
        android:textColor="@color/ivor_primarybar"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/ivor_tabmes_tv"
        android:layout_alignRight="@id/ivor_tabtitle_tv"
        android:layout_alignTop="@id/ivor_tabtitle_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>